mixin how
    .how
        .container
            .row
                .col-xl-4.col-lg-4.col-md-4.col-sm-4.col-6
                    .how__content
                        .how__shape.d-none.d-sm-block
                        .how__icon
                            img.how-icon.icon-search(src="../images/how/search.svg", alt="")
                        .how__text
                            h2.how-text Search Places
                        
                .col-xl-4.col-lg-4.col-md-4.col-sm-4.col-6
                    .how__content
                        .how__shape.how__shape--right.d-none.d-sm-block
                        .how__icon.how__icon-border
                            img.how-icon.icon-search(src="../images/how/select.svg", alt="")
                        .how__text
                            h2.how-text Select Places
                .col-xl-4.col-lg-4.col-md-4.col-sm-4.col-12
                    .how__content.how__content--last
                        .how__icon
                            img.how-icon.icon-search(src="../images/how/like.svg", alt="")
                        .how__text
                            h2.how-text Book & Enjoy